model User {
  id          Int     @id @default(autoincrement())
  username    String  @unique
  firstName   String
  lastName    String
  email       String  @unique
  password    String
  referalcode String?
  role        Role    @default(USER)
}

enum Role {
  USER
  ORGANIZER
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String    @unique
  description String
